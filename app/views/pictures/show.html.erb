<link href="/stylesheets/facebox.css" media="screen" rel="stylesheet" type="text/css"/>

<script src="/javascripts/jquery.js" type="text/javascript"></script>
<script src="/javascripts/facebox.js" type="text/javascript"></script>
<script type="text/javascript">
    jQuery(document).ready(function($) {
      $('a[rel*=facebox]').facebox({
        loading_image : '/images/lightbox/loading.gif',
        close_image   : '/images/lightbox/closelabel.gif'
      }) 
 $.facebox.settings.opacity = 0.8;
    })
  </script>

<p>
  <b>Title:</b>
  <%=h @picture.title %>
</p>
<p>
	<span class="thumbnail"><%= link_to image_tag (@picture.image.url(:thumb)), (@picture.image.url(:large)), :rel => 'facebox' %></span>
</p>

<p>
  <b>User:</b>
  <%= @picture.user.login %>
</p>

<p>
  <b>Submitted:</b>
  <%= @picture.submitted_long_ago %>
</p>

<h1>New comment</h1>

<% form_for([@picture, @comment]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>



<h2>Comments</h2>

<% @picture.comments.each do |c| %>
  <p>
    <b>Commenter:</b>
    <%=h c.commenter %>
  </p>
  <p>
	<b>Submitted:</b>
	<%=h c.submitted_long_ago %>
	</p>

  <p>
    <b>Comment:</b>
    <%=h c.body %>
  </p>
<% end %>




<%= link_to 'Back', pictures_path %>
