<h1>New Comment!</h1>
<p>Find me in app/views/comments/new.html.erb</p>

<% form_for([@picture, @comment]) do |f| %>
	<%= f.error_messages %>
	
	<p>
		<%= f.label :commenter %><br />
		<%= f.text_field :commenter %>
	</p>
	<p>
		<%= f.label :body %><br />
		<%= f.text_area :body %>
	</p>
	<p>
		<%= f.submit "Create" %>
	</p>
<% end %>

<%= link_to 'Back', picture_comments_path(@picture) %>
